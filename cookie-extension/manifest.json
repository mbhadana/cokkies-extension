{
  "manifest_version": 3,
  "name": "Floating Cookie Bubbles",
  "version": "2.0",
  "description": "Visualizes browser cookies as floating bubbles on the page.",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}